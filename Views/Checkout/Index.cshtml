@using MercerStore.ViewModels
@model CartViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumbs">
                <ul>
                    <li><a asp-controller="Home asp-action="Index" >Главная</a></li>
                    <li><span>Оплата</span></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">

    <form action="" class="needs-validation" id="paymentForm" novalidate>

        <div class="row">

            <div class="col-lg-8 mb-3">
                <div class="Checkout p-3 h-100 bg-white">

                    <h5><span>Данные для оплаты</span></h5>

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label for="cardName" class="form-label">Имя</label>
                            <input type="text" id="cardName" name="cardName" class="form-control"
                                   placeholder="Иван Иванов" aria-label="Cardholder Name" required>
                        </div>

                        <div class="col-md-6">
                            <label for="cardNumber" class="form-label">Номер карты</label>
                            <input type="text" name="cardNumber" id="cardNumber" class="form-control"
                                   placeholder="1234 5678 9012 3456" aria-label="Card Number" required>
                        </div>

                        <div class="col-md-6">
                            <label for="expiryDate" class="form-label">Дата выпуска</label>
                            <input type="text" name="expiryDate" id="expiryDate" class="form-control"
                                   placeholder="MM/YY" aria-label="Expiry Date" required>
                        </div>

                        <div class="col-md-6">
                            <label for="cvv" class="form-label">CVV</label>
                            <input type="text" name="cvv" id="cvv" class="form-control"
                                   placeholder="123" aria-label="CVV" required>
                        </div>

                        <div class="col-md-12">
                            <label for="billingAddress" class="form-label">Адресс доставки</label>
                            <input type="text" name="billingAddress" id="billingAddress" class="form-control"
                                   placeholder="г. , кв. , д. , кв." aria-label="Billing Address" required>
                        </div>

                    </div>

                </div>
            </div>

            <div class="col-lg-4 mb-3">

                <div class="cart-summary p-3 sidebar h-100">
                    <h5><span>Заказ</span></h5>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Продукт</th>
                                    <th class="text-end">Стоимость</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                            <small>@item.Price</small>
                                        </td>
                                        <td class="text-end">@((item.Price * item.Quantity))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" class="text-end"><div class="product-price">@Model.CartTotalPrice.ToString("C0")</div></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-outline-warning">Оплатить сейчас</button>
                    </div>

                </div>

            </div>

        </div>

    </form>

</div>