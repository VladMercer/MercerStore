@using MercerStore.ViewModels
@model UserProfileViewModel
@{
    ViewData["Title"] = "Изменении профиля";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumbs">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                    <li><a asp-controller="User" asp-action="UserProfile">Профиль</a></li>
                    <li><span>Изменение профиля</span></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="container mt-3 mb-4">
    <div class="card p-4 shadow-sm">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h3>Изменение профиля</h3>
                <form asp-action="EditUserProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="Id" name="Id" asp-for="Id" />
                    <div class="form-group mt-3">
                        <label asp-for="UserName"><i class="fas fa-user" id="userIcon"></i> Никнейм</label>
                        <input asp-for="UserName" class="form-control" value="@Model.UserName">
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="EmailAddress"><i class="fas fa-envelope" id="userIcon"></i> Почта</label>
                        <input asp-for="EmailAddress" class="form-control" value="@Model.EmailAddress">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="PhoneNumber"><i class="fas fa-phone" id="userIcon"></i> Номер телефона</label>
                        <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Address"><i class="fas fa-home" id="userIcon"></i> Адрес</label>
                        <input asp-for="Address" class="form-control" value="@Model.Address">
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="UserImage"><i class="fas fa-image" id="userIcon"></i> Фото профиля</label>
                        <input asp-for="UserImage" class="form-control" id="UserImage" type="file">
                    </div>
                    <button type="submit" class="btn btn-outline-warning mt-4 w-100">Обновить</button>
                </form>
            </div>
        </div>
    </div>
</div>
