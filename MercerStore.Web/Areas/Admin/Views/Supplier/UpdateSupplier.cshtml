@using MercerStore.Web.Areas.Admin.ViewModels.Suppliers
@model UpdateSupplierViewModel

@{
    ViewData["Title"] = "Обновление поставщика";
}

<div class="container mt-4">
    <h2 class="mb-4">Редактировать поставщика</h2>

    <form asp-action="UpdateSupplier" method="post" class="shadow p-4 rounded bg-white">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsCompany" class="form-check-input" />
            <label asp-for="IsCompany" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label asp-for="ContactPerson" class="form-label"></label>
            <input asp-for="ContactPerson" class="form-control" />
            <span asp-validation-for="ContactPerson" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TaxId" class="form-label"></label>
            <input asp-for="TaxId" class="form-control" />
            <span asp-validation-for="TaxId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-warning w-100">Сохранить</button>
    </form>
</div>
