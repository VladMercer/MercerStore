@model MercerStore.Web.Application.ViewModels.Categories.CreateCategoryViewModel

@{
    ViewData["Title"] = "Создание категории";
}
<div class="container mt-3 mb-4">
    <div class="card p-4 shadow-sm">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2>Создание категории</h2>

                <form asp-action="CreateCategory" enctype="multipart/form-data">
                    <div class="form-group mb-2">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="CategoryImage"></label>
                        <input type="file" asp-for="CategoryImage" class="form-control"/>
                        <span asp-validation-for="CategoryImage" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-warning mt-1">Создать</button>
                </form>
            </div>
        </div>
    </div>
</div>
